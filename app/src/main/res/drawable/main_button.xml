<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        android:drawable="@drawable/secondary_button_disabled" />
    <item
    	android:state_pressed="true"
		android:state_focused="true"
    	android:state_checked="false"
    	android:state_selected="false"
    	android:state_enabled="true"
        android:drawable="@drawable/secondary_button_selected" />
    <item
    	android:state_focused="true"
    	android:state_enabled="true"
        android:drawable="@drawable/secondary_button_focused" />

	<item
		android:state_selected="true"
		android:drawable="@drawable/secondary_button_selected" />


	<item
		android:state_checked="true"
		android:drawable="@drawable/main_button_selected" />

	<item
		android:state_checked="false"
		android:drawable="@drawable/secondary_button_enabled" />

    <item
    	android:state_enabled="true"
        android:drawable="@drawable/secondary_button_enabled" />
</selector>