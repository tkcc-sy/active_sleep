<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heading"
        style="@style/HeadingRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:lines="2"
        android:text="UI000321C001"
        android:textColor="#00576A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview9"
        style="@style/TextRegistration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textSize="14dp"
        android:lines="2"
        android:text="UI000321C002"
        android:textAlignment="center"
        android:textColor="#5D92AC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading" />


    <LinearLayout
        android:id="@+id/llConnectionList"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview9"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <RadioGroup
            android:id="@+id/rgConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:buttonTint="#00576A"
                android:layout_marginBottom="10dp"
                android:id="@+id/rbConnectionInternet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UI000321C003" />

            <RadioButton
                android:buttonTint="#00576A"
                android:id="@+id/rbConnectionIntranet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UI000321C004" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnChoose"
        style="@style/RegistrationButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/slider_button"
        android:paddingHorizontal="40dp"
        android:text="UI000321C005"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

