<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".ui.main.RealtimeMonitorDialog"
    android:gravity="center"
    android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100">

            <RelativeLayout
                android:id="@+id/main_webview_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75"
                android:background="@drawable/realtime_monitor_background">

                <com.paramount.bed.util.RoundedWebView
                    android:id="@+id/main_webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/realtime_monitor_background"></com.paramount.bed.util.RoundedWebView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/real_time_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="UI000550C001"
                        android:textColor="#6092AF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/real_time_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="UI000550C002"
                        android:textColor="#6092AF"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:padding="13dp"
                    android:src="@drawable/popup_modal_close1"
                    android:tint="#ffffff" />
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>