<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.ForgotPasswordInputActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tiny_space"
        android:layout_marginBottom="@dimen/small_space"
        android:max="1000"
        android:progressTint="@color/dot_active"
        android:secondaryProgressTint="@color/dot_inactive" />

    <TextView
        android:id="@+id/headerTitle"
        android:textStyle="bold"
        style="@style/HeadingRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:lineSpacingMultiplier="1.3"
        android:text="UI000491C002"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/headerTitle2"
        style="@style/HeadingRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:lineSpacingMultiplier="1.3"
        android:text="UI000491C003"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneNumberHeader"
            style="@style/TextRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="UI000491C004" />

        <EditText
            android:id="@+id/etPhoneNumber"
            style="@style/InputNomargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="UI000491C017"
            android:inputType="number"
            android:maxLength="13"
            android:paddingVertical="5dp"
            android:text="" />

        <TextView
            android:id="@+id/birthDateHeader"
            style="@style/TextRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="UI000491C005" />

        <EditText
            android:id="@+id/etBirthday"
            style="@style/InputSpinnerNoMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="UI000491C018"
            android:inputType="text"
            android:paddingVertical="5dp"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSendSMS"
        style="@style/RegistrationButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:width="280dp"
        android:text="UI000491C006"
        app:srcCompat="@color/dot_active" />
</LinearLayout>